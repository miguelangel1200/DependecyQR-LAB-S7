<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DependecyQR.MainPage">

    <StackLayout x:Name="stkQR">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms! With Code QR" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button x:Name="btnGenerateQR" Text="Generar QR" Clicked="btnGenerateQR_Clicked"/>
        <Button x:Name="btnScannerQR" Text="Lector QR" Clicked="btnScannerQR_Clicked"/>
        <Entry x:Name="txtResultado" Placeholder="Resultado del QR" />
    </StackLayout>

</ContentPage>
